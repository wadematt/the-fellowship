{
  "manifest_version": 3,
  "name": "The Fellowship",
  "version": "2.0.0",
  "description": "Replaces people's names with characters from The Lord of the Rings: Frodo, Sam, Aragorn, Gandalf, Gimli, Legolas, Merry, Pippin, and Boromir",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["compromise.js", "content.js"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}