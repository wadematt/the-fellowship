{
  "manifest_version": 3,
  "name": "The Fellowship",
  "version": "1.0",
  "description": "Tired of boring names? This extension replaces them with the heroes (and hobbits) of The Fellowship of the Ring.",
  "host_permissions": ["<all_urls>"],
  "browser_specific_settings": {
    "gecko": {
      "id": "thefellowship@mattwade.me"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}